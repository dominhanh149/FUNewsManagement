@{
    ViewData["Title"] = "Chi tiết bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Toast Container -->
<div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index:9999"></div>

<!-- Loading Skeleton -->
<div id="loadingSkeleton" class="py-4">
    <div class="placeholder-glow mb-3">
        <span class="placeholder col-3 rounded" style="height:24px"></span>
    </div>
    <div class="placeholder-glow mb-2">
        <span class="placeholder col-8 rounded" style="height:40px"></span>
    </div>
    <div class="placeholder-glow mb-4">
        <span class="placeholder col-5 rounded" style="height:20px"></span>
    </div>
    <div class="placeholder-glow">
        <span class="placeholder col-12 rounded mb-2" style="height:16px"></span>
        <span class="placeholder col-11 rounded mb-2" style="height:16px"></span>
        <span class="placeholder col-10 rounded mb-2" style="height:16px"></span>
        <span class="placeholder col-12 rounded mb-2" style="height:16px"></span>
        <span class="placeholder col-9 rounded" style="height:16px"></span>
    </div>
</div>

<!-- Article Content (hidden until loaded) -->
<div id="articleContent" class="d-none">
    <div class="row g-4">
        <!-- Main Article -->
        <div class="col-lg-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb" style="font-size:.85rem">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none" style="color:#6c63ff">Trang chủ</a></li>
                    <li class="breadcrumb-item" id="bcCategory"></li>
                    <li class="breadcrumb-item active text-muted" id="bcTitle"></li>
                </ol>
            </nav>

            <!-- Article Card -->
            <div class="card border-0 shadow-sm" style="border-radius:20px;overflow:hidden">
                <!-- Category badge header -->
                <div style="background:linear-gradient(135deg,#6c63ff,#4facfe);padding:2px 0"></div>
                <div class="card-body p-4 p-lg-5">
                    <!-- Category + Status -->
                    <div class="d-flex align-items-center gap-2 mb-3 flex-wrap">
                        <span id="articleCategory" class="badge rounded-pill px-3 py-2"
                              style="background:#ede9ff;color:#6c63ff;font-size:.8rem"></span>
                        <span id="articleStatus" class="badge rounded-pill px-3 py-2" style="font-size:.8rem"></span>
                    </div>

                    <!-- Title -->
                    <h1 id="articleTitle" class="fw-bold mb-2" style="font-size:1.8rem;line-height:1.3;color:#1a1a2e"></h1>

                    <!-- Headline -->
                    <p id="articleHeadline" class="text-muted mb-4" style="font-size:1.05rem;font-style:italic;border-left:3px solid #6c63ff;padding-left:12px"></p>

                    <!-- Meta info -->
                    <div class="d-flex align-items-center gap-3 mb-4 flex-wrap" style="font-size:.85rem;color:#888">
                        <span><i class="bi bi-person-circle me-1" style="color:#6c63ff"></i><span id="articleAuthor"></span></span>
                        <span><i class="bi bi-calendar3 me-1" style="color:#6c63ff"></i><span id="articleDate"></span></span>
                        <span><i class="bi bi-eye-fill me-1" style="color:#f5576c"></i><span id="articleViews"></span> lượt xem</span>
                        <span id="articleSource" class="d-none">
                            <i class="bi bi-link-45deg me-1" style="color:#6c63ff"></i>
                            <a id="articleSourceLink" href="#" target="_blank" class="text-decoration-none" style="color:#6c63ff"></a>
                        </span>
                    </div>

                    <!-- Tags -->
                    <div id="articleTags" class="d-flex flex-wrap gap-2 mb-4"></div>

                    <hr class="my-4" style="border-color:#f0f0f0">

                    <!-- Content -->
                    <div id="articleBody" class="article-body" style="line-height:1.85;color:#333;font-size:1rem"></div>
                </div>
            </div>

            <!-- Back button -->
            <div class="mt-4">
                <a href="/" class="btn btn-outline-secondary" style="border-radius:10px">
                    <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                </a>
            </div>
        </div>

        <!-- Sidebar: Related Articles -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm sticky-top" style="border-radius:20px;top:20px">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-1" style="color:#1a1a2e">
                        <i class="bi bi-collection-fill me-2" style="color:#6c63ff"></i>Bài viết liên quan
                    </h6>
                    <p class="text-muted mb-3" style="font-size:.78rem">Gợi ý dựa trên tag và category</p>

                    <!-- Loading related -->
                    <div id="relatedLoading" class="placeholder-glow">
                        <div class="placeholder col-12 rounded mb-2" style="height:80px"></div>
                        <div class="placeholder col-12 rounded mb-2" style="height:80px"></div>
                        <div class="placeholder col-12 rounded" style="height:80px"></div>
                    </div>

                    <!-- Related list -->
                    <div id="relatedList"></div>

                    <!-- Empty state -->
                    <div id="relatedEmpty" class="text-center py-3 d-none">
                        <i class="bi bi-journal-x fs-2 text-muted"></i>
                        <p class="text-muted mt-2 mb-0" style="font-size:.85rem">Không có bài viết liên quan</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Error state -->
<div id="errorState" class="d-none text-center py-5">
    <i class="bi bi-exclamation-triangle-fill fs-1" style="color:#f5576c"></i>
    <h4 class="mt-3 fw-bold">Không tìm thấy bài viết</h4>
    <p class="text-muted">Bài viết không tồn tại hoặc đã bị xóa.</p>
    <a href="/" class="btn text-white" style="background:linear-gradient(135deg,#6c63ff,#4facfe);border-radius:10px">
        <i class="bi bi-house me-1"></i> Về trang chủ
    </a>
</div>

<style>
    .article-body p { margin-bottom: 1.2rem; }
    .article-body h2, .article-body h3 { color: #1a1a2e; margin-top: 2rem; margin-bottom: 1rem; }
    .article-body img { max-width: 100%; border-radius: 12px; margin: 1rem 0; }
    .article-body blockquote {
        border-left: 4px solid #6c63ff;
        padding-left: 1rem;
        color: #666;
        font-style: italic;
        margin: 1.5rem 0;
    }
    .related-card {
        border-radius: 12px;
        border: 1px solid #f0f0f0;
        padding: 12px;
        margin-bottom: 12px;
        cursor: pointer;
        transition: all .2s ease;
        text-decoration: none;
        display: block;
        color: inherit;
    }
    .related-card:hover {
        border-color: #6c63ff;
        box-shadow: 0 4px 16px rgba(108,99,255,.12);
        transform: translateY(-2px);
        color: inherit;
    }
</style>

@section Scripts {
    <script>
        window.__articleId = '@ViewBag.ArticleId';
    </script>
    <script src="~/js/news.detail.js?v=2"></script>
}
